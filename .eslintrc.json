{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "jquery": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "no-nested-ternary": "off",
    "eol-last": "off",
    "import/prefer-default-export":"off" ,
    "import/extensions": [
      1,
      {
        "js": "always",
        "json": "always"
      }
    ]
  }, 

  "ignorePatterns": ["dist/", "build/"]
}
